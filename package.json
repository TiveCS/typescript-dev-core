{
	"name": "@tivecs/core",
	"version": "1.3.7",
	"description": "Core utilities and types for TiveCS projects",
	"author": "TiveCS",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bun build ./index.ts --outdir ./dist --target node --format esm && tsc --emitDeclarationOnly --outDir ./dist",
		"prepublishOnly": "bun run build",
		"lint": "biome check .",
		"lint:fix": "biome check --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"zod": "^4.2.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/TiveCS/typescript-dev-core.git"
	},
	"keywords": [
		"typescript",
		"utilities",
		"core",
		"http-status",
		"error-handling",
		"helpers",
		"string-utils",
		"array-utils",
		"async-utils",
		"object-utils",
		"retry",
		"debounce",
		"type-safe"
	]
}
